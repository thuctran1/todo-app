.tu-chip{display:flex;justify-content:center;align-items:center;width:fit-content;padding:4px;border-radius:var(--space-inline-16x)}.tu-chip-content{line-height:1}.tu-chip-icon{padding:8px}.tu-chip-none{border:1px solid var(--gray30)}.tu-chip-active{border:1px solid var(--color-alias-brand);color:var(--color-alias-brand);font-weight:700}.tu-chip:hover{background-color:var(--color-chip-background-hover)}.tu-chip-left{margin-right:var(--space-inset-4x)}.tu-chip-right{margin-left:var(--space-inset-4x)}.tu-chip-left,.tu-chip-right{display:flex;cursor:pointer}.tu-chip-left-image,.tu-chip-right-image{width:24px;height:24px;border-radius:50%}.tu-chip-disabled{pointer-events:none;border-color:var(--border-disabled);color:var(--text-disabled)}.tu-chip-disabled .tu-chip-left,.tu-chip-disabled .tu-chip-right{opacity:.2}