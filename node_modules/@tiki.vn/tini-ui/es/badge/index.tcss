.tu-badge{display:inline-block;position:relative;vertical-align:middle}.tu-badge-text{display:flex;position:absolute;align-items:center;justify-content:center;top:0;min-width:10px;min-height:12px;padding:var(--space-inline-2x) var(--space-stack-4x);text-align:center;background-color:var(--color-badge-background-default);border-radius:var(--border-radius-rounded-8px);color:var(--color-badge-text-default);z-index:1}.tu-badge-text-left{right:0;transform:translate(50%,-50%)}.tu-badge-text-right{left:0;transform:translate(-50%,-50%)}.tu-badge-text-middle{right:50%;transform:translate(50%,-100%)}.tu-badge-text-padding{opacity:0}.tu-badge-text-inner{font-size:var(--font-size-x-small);position:relative;z-index:2;color:var(--color-badge-text-default);white-space:nowrap}.tu-badge-text-inner-absolute{font-size:var(--font-size-x-small);position:absolute;left:50%;transform-origin:0 center;transform:scale(.75) translate3d(-50%,0,0);z-index:3}.tu-badge-text-inner-opacity{transform:scale(1);zoom:.75;opacity:0}.tu-badge-not-a-wrapper .tu-badge-text{position:relative;top:auto;right:auto;transform:translateX(0)}.tu-badge-text.is-dot{padding:0;min-width:8px;width:8px;min-height:8px;height:8px;border-radius:50%}.tu-badge-arrow{position:absolute;height:4px;width:4px;bottom:-2px;left:50%;margin-left:-2px;transform:rotate(45deg);z-index:1;border-radius:50vh 0 0;background-color:var(--color-badge-background-default)}.tu-badge-arrow.tu-badge-stroke{border:0 none;filter:drop-shadow(1px 1px 0 var(--color-alias-primary-on-reverse-theme))}.tu-badge-text-arrow-right{border-radius:8px 8px 0 8px}.tu-badge-text-arrow-left{border-radius:8px 8px 8px 0}.tu-badge-stroke{border:1px solid var(--color-alias-primary-on-reverse-theme)}